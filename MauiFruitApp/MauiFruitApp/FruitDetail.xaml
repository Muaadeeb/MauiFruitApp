<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiFruitApp.FruitDetail"
             Title="FruitDetail">

    <Grid RowDefinitions="Auto, Auto, *" Padding="20">
        <Image Grid.Row="0" x:Name="ImgFruit" HeightRequest="500"></Image>
        <Label Grid.Row="1" x:Name="FruitName" FontSize="Title"></Label>
        <Label Grid.Row="2" x:Name="FruitSentence" FontSize="Subtitle"></Label>
    </Grid>


    
